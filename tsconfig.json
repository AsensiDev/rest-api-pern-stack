{
    "compilerOptions": {
        "outDir": "./dist", // compila los archivos dentro de esta carpeta
        "rootDir": "./src", // coge como referencia esta ruta para compilar 
        "lib": ["esnext"],
        "strict": false, // si estuviera en true no permitiría tipar con any
        "sourceMap": true, // añade el .map de cada archivo compilado
        "esModuleInterop": true,
        "declaration": true // crea archivo de declarion de ts
    },"include": ["src/**/*.ts"] // todos los archivos incluidos en la compilación
}